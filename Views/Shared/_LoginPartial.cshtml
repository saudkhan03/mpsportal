@using Microsoft.AspNetCore.Identity

@inject SignInManager<portal.mps.Data.mpsUser> SignInManager
@inject UserManager<portal.mps.Data.mpsUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a style="cursor:default" id="username"><i class="fa fa-user"></i> @UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <!-- <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li> -->
        <li><a asp-area="" asp-controller="Auth" asp-action="Login">Log in</a></li>
    </ul>
}
