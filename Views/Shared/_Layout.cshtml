        </div>
    </nav>
    <div class="container body-content" style="padding-top:24px">
        <!-- <div class="flmnu">
            <div class="mnubtn vericaltext">menu</div>
            <div class="row">
                <div class="col-md-10"><div class="btn btn-info" style="margin-left:4px;">Admin</div> </div>
            </div>
        </div> -->
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - portal.mps</p>
        </footer>
        <div id="getUserRolesUrl" style="display:none" data-request-url="@Url.Action("getUserRole", "Home")"></div>
    </div>
    
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
    </environment>
    <script>
        (function ($) {
            $(document).ready(function () {
                $('ul.dropdown-menu [data-toggle=dropdown]').on('click', function (event) {
                    event.preventDefault();
                    event.stopPropagation();
                    $(this).parent().siblings().removeClass('open');
                    $(this).parent().toggleClass('open');
                });
                showRolesMenu();
            });
        })(jQuery);
        function showRolesMenu(){
            var userName = $('#username').text().trim();
            if(userName)
            {
                var r='';
                var u = $('#getUserRolesUrl').data('request-url');
                $.post(u,{username:userName},function(res){
                    r = res.role;
                    $.each($('.panel'),function(i,v){
                        var x = $(this).html();
                        // if(r=='Student' || r=='Staff' || r=='Teacher' || r=='PrimeStaff'){
                        //     if(x.indexOf('Logged ')==-1){
                        //         $(this).hide();
                        //     }
                        // }
                        if(r=='Accountant')
                        {
                            if(x.indexOf('Expense')>-1){
                                $(this).show();
                            }
                            if(x.indexOf('Reporting')>-1){
                                $(this).show();
                            }
                        }
                        else if(r=='Admin')
                        {
                            if(!$(this).hasClass('js-student'))
                                $(this).show();
                        }
                    });
                
                    $.each($('.navbar-nav > li' ),function(i,v){
                        var x = $(v.firstElementChild).html();
                        if(r=='Student' || r=='Staff' ){
                            if(!x.startsWith('About') && !x.startsWith('<i') && !x.startsWith('Log')){
                                $(v).hide();
                            }
                        }
                        else if(r=='Accountant'){
                            if(x.startsWith('Admin')){
                                $(v).hide();
                            }
                        }
                        else if(r=='Teacher')
                        {
                            if(!x.startsWith('About') && !x.startsWith('<i') && !x.startsWith('Log') && !x.startsWith('Students')){
                                $(v).hide();
                            }
                        }
                        else if(r=='PrimeStaff')
                        {
                            if(x.startsWith('Admin')){
                                for(var i=0;i<6;i++){
                                    v.children[1].children[i].hidden = true;
                                }
                            }
                            if(!x.startsWith('About') && !x.startsWith('<i') && !x.startsWith('Log') && !x.startsWith('Students') && !x.startsWith('Admin')){
                                $(v).hide();
                            }
                        }
                        else if(r=='Admin'){
                            $(v).show()
                        }
                    });
                });
            }
            else{
                $.each($('.navbar-nav > li' ),function(i,v){
                    var x = $(v.firstElementChild).html();
                    if(!x.startsWith('About') && !x.startsWith('<i') && !x.startsWith('Log')){
                        $(v).hide();
                    }
                });
            }
        }
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
