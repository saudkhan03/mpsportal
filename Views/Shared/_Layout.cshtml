                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Subjects","Subjects","Students")</li>
                        <li>@Html.ActionLink("Student Academics","Index","Students")</li>
                    </ul>
                    </li>
                    <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reports<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li class="dropdown dropdown-submenu"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Student</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Student general","Students","Reports")</li>
                            <li>@Html.ActionLink("Student Fees","StudentFee","Reports")</li>
                            <li>@Html.ActionLink("Student Academics","StudentAcademics","Reports")</li>
