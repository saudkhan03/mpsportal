                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Students","Students","Admin")</li>
                            <li>@Html.ActionLink("Edit/Update Students","EditStudent","Admin")</li>
                        </ul>
                        </li>
                        <li class="divider"></li>
                        <li class="dropdown dropdown-submenu"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Teachers/Staff</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Staff/Teachers","Staff","Admin")</li>
                            <li>@Html.ActionLink("Edit/Update Staff/Teachers","EditStaff","Admin")</li>
                        </ul>
                        </li>
                        <li class="divider"></li>
                        <li class="dropdown dropdown-submenu"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Expense</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add/Edit Expense headers","Expense","Admin")</li>
                            <li>@Html.ActionLink("Edit Student Slabs","Slabs","Admin")</li>
                            <li>@Html.ActionLink("Add/Edit Salary Deductions","Deductions","Admin")</li>
                        </ul>
                        </li>
                        <li class="divider"></li>
                        <li class="dropdown dropdown-submenu"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Other actions</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Change password","ChangePassword","Admin")</li>
                            <li>@Html.ActionLink("Send Mails(s)","SendMail","Admin")</li>
                            <li>@Html.ActionLink("Send Text Msg(s)","SendText","Admin")</li>
                        </ul>
                        </li>
